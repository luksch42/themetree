{
  "name": "themetree",
  "displayName": "Themetree",
  "description": "Automatically color your IDE based on the current git branch - perfect for worktrees",
  "version": "0.1.2",
  "publisher": "hjegeorge",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "theme",
    "git",
    "branch",
    "worktree",
    "color",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "themetree.refresh",
        "title": "Themetree: Refresh Theme"
      },
      {
        "command": "themetree.clear",
        "title": "Themetree: Clear Theme Colors"
      }
    ],
    "configuration": {
      "title": "Themetree",
      "properties": {
        "themetree.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic theme coloring based on branch name"
        },
        "themetree.intensity": {
          "type": "string",
          "enum": ["subtle", "medium", "vibrant"],
          "default": "medium",
          "description": "Color intensity level"
        },
        "themetree.defaultBranches": {
          "type": "array",
          "default": ["main", "master", "develop", "dev"],
          "description": "Branches that keep the default theme (no color changes)"
        },
        "themetree.excludedBranches": {
          "type": "array",
          "default": [],
          "description": "Branch patterns to exclude from theming (supports wildcards like 'release/*')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "echo \"No tests yet\" && exit 0",
    "publish": "vsce publish",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hjegeorge/themetree"
  },
  "license": "MIT"
}

